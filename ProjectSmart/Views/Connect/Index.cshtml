<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">CONNECT</h1>

<hr>

<div id="container-fluid d-flex">
    <form asp-action="" asp-controller="" method="POST">
        <div class="container-fluid ms-5 ps-5">
            <div class="mb-3 me-5 pe-5">
                <label for="subject" class="form-label">
                    <h3>SUBJECT:</h3>
                </label>
                <input type="text" class="form-control" id="subject" placeholder="Subject..." autocomplete="off" required>
            </div>
            <div class="mb-3 me-5 pe-5">
                <label for="Textarea1" class="form-label">
                    <h3>CONTENT:</h3>
                </label>
                <textarea class="form-control" id="Textarea1" rows="8" placeholder="Write your content here..." autocomplete="off" required></textarea>
                <input type="submit" name="submit" id="submit" class="btn btn-warning mt-2" value="SUBMIT">
            </div>
        </div>
    </form>

    <form asp-action="" asp-controller=""  method="POST">
        <div class="container-fluid ms-5 ps-5">
            <div class="mb-3 me-5 pe-5">
                <label for="Textarea2" class="form-label">
                    <h3>Write a Comment:</h3>
                </label>
                <textarea class="form-control" id="Textarea2" rows="8" placeholder="Write a comment here..."></textarea>
                <input type="submit" name="submit" id="submit" class="btn btn-warning mt-2 mb-4" value="SUBMIT">
            </div>
        </div>
    </form>
</div>
